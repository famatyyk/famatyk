GoLLogTextEdit < TextEdit
  multiline: true
  text-wrap: true
  editable: false

UIComboBoxPopupMenu < UIPopupMenu
  padding: 2
  background-color: #000000cc
  border-width: 1
  border-color: #ffffff33
  focusable: false

UIComboBoxPopupMenuButton < UIButton
  height: 22
  text-align: left
  text-offset: 4 0
  color: #dfdfdf
  background-color: alpha
  margin: 1

  $hover !disabled:
    background-color: #355d89

UIComboBoxPopupScrollMenu < UIPopupScrollMenu
  padding: 2
  background-color: #000000cc
  border-width: 1
  border-color: #ffffff33
  focusable: false

UIComboBoxPopupScrollMenuButton < UIButton
  height: 22
  text-align: left
  text-offset: 4 0
  color: #dfdfdf
  background-color: alpha
  margin: 1

  $hover !disabled:
    background-color: #355d89


GoLButton < UIButton
  height: 22
  padding: 2
  font: verdana-11px-rounded
  border-width: 1
  border-color: #ffffff12
  background-color: #2d2d2dcc
  color: #ffffff
  text-align: center

  $hover !disabled:
    background-color: #3a3a3acc

  $pressed !disabled:
    background-color: #1f1f1fcc


GoLButtonSecondary < GoLButton
  background-color: #333333cc

  $hover !disabled:
    background-color: #444444cc



GoLTabButton < GoLButtonSecondary
  height: 22
  width: 38
  checkable: true
  text-align: center
  padding: 2
  background-color: #2a2a2acc

  $checked:
    background-color: #1f3a1fcc
    border-color: #33ff3344

GoLButtonDanger < GoLButton
  background-color: #5a1f1fcc

  $hover !disabled:
    background-color: #7a2a2acc


GoLSectionHeader < UILabel
  margin-top: 8
  margin-bottom: 4
  color: #dfdfdf
  font: verdana-11px-rounded


GoLCard < UIWidget
  width: 100%
  padding: 6
  background-color: #00000022
  border-width: 1
  border-color: #ffffff10

